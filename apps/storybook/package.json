    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "eslint-plugin-storybook": "^0.6.15",
    "prettier": "^3.2.5",
    "sonner": "^1.3.1",
    "storybook": "^7.6.6",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:storybook/recommended",
      "@acme/eslint-config/base",
      "@acme/eslint-config/nextjs",
      "@acme/eslint-config/react"
    ]
  },
  "prettier": "@acme/prettier-config"
