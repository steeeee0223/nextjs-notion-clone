{
  "name": "@acme/storybook",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "storybook build -s public",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "storybook dev -p 6006",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "next lint",
    "start": "serve storybook-static",
    "typecheck": "tsc --noEmit"
