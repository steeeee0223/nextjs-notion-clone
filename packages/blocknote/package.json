  "devDependencies": {
    "@swy/eslint-config": "workspace:*",
    "@swy/prettier-config": "workspace:*",
    "@swy/tsconfig": "workspace:*",
    "@types/node": "catalog:node20",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
